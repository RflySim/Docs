{
    "name": "gitbook-plugin-navbar",
    "version": "0.1.0",
    "description": "This GitBook plugin can be used to add a navigation bar to your book.",
    "engines": {
        "gitbook": ">=3.0.0"
    },
    "gitbook": {
        "properties": {
            "navbar": {
                "logo": {
                    "link": {
                        "type": "string",
                        "default": "",
                        "description": "link from the logo"
                    },
                    "image": {
                        "type": "string",
                        "default": "",
                        "description": "source of the logo image"
                    },
                    "alt": {
                        "type": "string",
                        "default": "",
                        "description": "alter text of the logo image"
                    }
                },
                "menu": {
                    "items": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "text": {
                                    "type": "string",
                                    "default": "",
                                    "description": "text of the menu item"
                                },
                                "link": {
                                    "type": "string",
                                    "default": "",
                                    "description": "target link of the menu item"
                                }
                            }
                        },
                        "default": [],
                        "description": "array of menu items"
                    },
                    "style": {
                        "color": {
                            "type": "string",
                            "default": "black",
                            "description": "HTML color of the menu items in active, visited states"
                        },
                        "hover": {
                            "type": "string",
                            "default": "black",
                            "description": "HTML color of the menu items in hover state"
                        }
                    }
                },
                "style": {
                    "background": {
                        "type": "string",
                        "default": "white",
                        "description": "HTML color of the navbar background"
                    },
                    "height": {
                        "type": "number",
                        "default": 50,
                        "description": "height of the navbar in px"
                    }
                }
            }
        }
    },
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "header",
        "navbar",
        "navigation"
    ],
    "author": "Chamath Kirinde",
    "license": "ISC"
}